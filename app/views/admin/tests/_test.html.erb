<tr>
  <td class="align-middle" display="inline-table">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id} %>
     <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test) %></td>
  <td class="align-middle"><%= test.category.name %></td>
  <td class="align-middle"><%= test.author.email %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= link_to t('.open'), admin_test_path(test) %></td>
  <td class="align-middle">
    <%= link_to t('.edit'), edit_admin_test_path(test),
                class: 'form-inline-link',
                data: {test_id: test.id} %>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete'),
               admin_test_path(test),
               method: :delete,
               data: {confirm: t('.confirm')} %>
  </td>
</tr>