<h1>Tests</h1>
<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= test_level(@test) %>
</p>

<ul>
  <% @test.questions.each do |question| %>
    <li>
      <%= question.body %>
      <%= link_to 'Check', question %>
      <%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Edit', edit_question_path(question) %>
    </li>
  <% end %>
</ul>

<%= link_to 'New question', new_test_question_path(@test) %><br />
<%= link_to 'Edit', edit_test_path(@test) %>
<%= link_to 'Back', tests_path %>
<%= link_to 'New question:', new_test_question_path(@test) %>
