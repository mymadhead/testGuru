<div class="row justify-content-center mt-3">
  <div class="col col-md-4">

    <h2><%= t('.header') %></h2>

    <div class="card border-primary">
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <p>
              <%= f.label :email, t('.email') %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Enter email' %>
            </p>

            <p>
              <%= f.label :password, t('.password') %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </p>

            <div class="form-check">
              <!--          block is used not to use for: to check the box on text click-->
              <%= f.label :remember_me, class: 'form-check-label' do %>
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= t('.remember') %>
              <% end %>
            </div>

            <%= f.submit t('.enter'), class: 'btn btn-primary' %>
          </div>
        <% end %>

      </div>
    </div>

    <%= render "devise/shared/links" %>

  </div>
</div>